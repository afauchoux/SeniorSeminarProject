<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Click on picture to upload profile picture" />

        <ImageView
            android:id="@+id/userProfilePic"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="18dp"
            android:background="@android:drawable/ic_menu_camera"
            android:onClick="userProfilePicPressed"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/userEditUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Enter username" />

        <Button
            android:id="@+id/userSaveProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:onClick="userSaveProfileButtonPressed"
            android:text="Save"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>